<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag "film_icon.svg", class: "mx-auto h-10 w-auto", alt: "Reel Picks" %>
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-neutral-100">Sign in to your account</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <% if alert = flash[:alert] %>
      <div class="mb-6 rounded-md bg-red-950 p-4">
        <div class="flex">
          <div class="shrink-0">
            <svg class="size-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495ZM10 5a.75.75 0 0 1 .75.75v3.5a.75.75 0 0 1-1.5 0v-3.5A.75.75 0 0 1 10 5Zm0 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <div class="text-sm text-red-400" id="alert">
              <p><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="mb-6 rounded-md bg-green-950 p-4">
        <div class="flex">
          <div class="shrink-0">
            <svg class="size-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <div class="text-sm text-green-400" id="notice">
              <p><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with url: session_url, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, class: "block text-sm/6 font-medium text-neutral-100" %>
        <div class="mt-2">
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address], class: "block w-full rounded-md bg-neutral-100/5 px-3 py-1.5 text-base text-neutral-100 outline-1 -outline-offset-1 outline-neutral-100/10 placeholder:text-neutral-500 focus:outline-2 focus:-outline-offset-2 focus:outline-rose-500 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, "Password", class: "block text-sm/6 font-medium text-neutral-100" %>
          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path, class: "font-semibold text-rose-400 hover:text-rose-300" %>
          </div>
        </div>
        <div class="mt-2">
          <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, class: "block w-full rounded-md bg-neutral-100/5 px-3 py-1.5 text-base text-neutral-100 outline-1 -outline-offset-1 outline-neutral-100/10 placeholder:text-neutral-500 focus:outline-2 focus:-outline-offset-2 focus:outline-rose-500 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", class: "flex w-full justify-center rounded-md bg-rose-500 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-rose-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-500" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm/6 text-neutral-400">
      Not a member?
      <a href="#" class="font-semibold text-rose-400 hover:text-rose-300">Start a 14 day free trial</a>
    </p>
  </div>
</div>
